{
  "name": "handlebars-preview",
  "displayName": "Handlebars Preview",
  "description": "Live preview for Handlebar templates",
  "version": "1.2.0",
  "publisher": "chaliy",
  "engines": {
    "vscode": "^1.5.0"
  },
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/chaliy/vscode-handlebars-preview"
  },
  "galleryBanner": {
    "color": "#0F6378",
    "theme": "dark"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "Handlebars",
    "Live Preview"
  ],
  "activationEvents": [
    "onCommand:handlebarsPreview.preview"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "handlebarsPreview.preview",
        "title": "Handlebars: Open Preview"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Handlebars Preview Configuration",
      "properties": {
        "handlebarsPreview.partialsDirectory": {
          "type": "string",
          "description": "Directory with Partials"
        },
        "handlebarsPreview.helpersFile": {
          "type": "string",
          "description": "File with handlebars helper"
        },
        "handlebarsPreview.dataFile": {
          "type": "string",
          "description": "JSON File with data for handlebars template"
        }
      }
    },
    "keybindings": [
      {
        "command": "handlebarsPreview.preview",
        "key": "ctrl+p h",
        "when": "!terminalFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "copyfiles test/examples/*.* out/ && tsc -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.40",
    "copyfiles": "^1.2.0",
    "mocha": "^2.3.3",
    "typescript": "^2.0.3",
    "vscode": "^1.0.0"
  },
  "dependencies": {
    "bluebird": "^3.5.0",
    "chokidar": "^1.7.0",
    "glob": "^7.1.2",
    "handlebars": "^4.0.6",
    "lodash": "^4.17.4"
  }
}
